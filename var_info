# -*- sh -*-
# This is a file run by sh used for replacing certain variables from input
# files in the XBMC packaging.

BUILD_DEPENDS="debhelper (>= 7.0.50~),
 python-support,
 cmake,
 autopoint | gettext,
 autotools-dev,
 autoconf,
 automake,
 unzip,
 libboost-dev,
 zip,
 libtool,
 libgles2-mesa-dev [armel] | libgl1-mesa-dev | libgl-dev,
 libglu1-mesa-dev | libglu-dev,
 libglew-dev,
 libmad0-dev,
 libjpeg-dev,
 libsamplerate-dev,
 libogg-dev,
 libvorbis-dev,
 libfreetype6-dev,
 libfontconfig-dev,
 libbz2-dev,
 libfribidi-dev,
 libsqlite3-dev,
 libmysqlclient-dev,
 libasound2-dev | libasound-dev,
 libpng12-dev | libpng-dev,
 libpcre3-dev,
 liblzo2-dev,
 libcdio-dev,
 libsdl-dev,
 libsdl-image1.2-dev,
 libsdl-mixer1.2-dev,
 libenca-dev,
 libjasper-dev,
 libxt-dev,
 libxmu-dev,
 libcurl4-gnutls-dev | libcurl-dev,
 libdbus-1-dev,
 libpulse-dev,
 libavahi-common-dev,
 libavahi-client-dev,
 libxrandr-dev,
 libmpeg2-4-dev,
 libass-dev (>= 0.9.8),
 libflac-dev,
 python-dev,
 gawk,
 gperf,
 nasm [i386],
 yasm,
 libcwiid-dev,
 libbluetooth-dev,
 zlib1g-dev,
 libsmbclient-dev,
 libiso9660-dev,
 libssl-dev,
 libvdpau-dev,
 libmicrohttpd-dev,
 libmodplug-dev,
 librtmp-dev,
 libcrystalhd-dev [i386 amd64],
 curl,
 libyajl-dev,
 libboost-thread-dev,
 libomxil-bellagio-dev [armel],
 python-imaging,
 libplist-dev,
 libhal-storage-dev,
 libcec-dev (>= 1.1),
 libudev-dev,
 libshairport-dev,
 libnfs-dev,
 libltdl-dev,
 libtiff4-dev | libtiff-dev,
 libtinyxml-dev,"
BUILD_DEPENDS_PPA="$BUILD_DEPENDS"

if [ "$(lsb_release -is)" = "Debian" ]; then
BUILD_DEPENDS="$BUILD_DEPENDS
 libavcodec-dev (>= 4:0.7),
 libavfilter-dev (>= 4:0.7),
 libavformat-dev (>= 4:0.7),
 libavutil-dev (>= 4:0.7),
 libpostproc-dev (>= 4:0.7),
 libswscale-dev (>= 4:0.7),"
else
BUILD_DEPENDS_PPA="$BUILD_DEPENDS_PPA
 libafpclient-dev,
 libavcodec-dev,
 libavfilter-dev,
 libavformat-dev,
 libavutil-dev,
 libpostproc-dev,
 libswscale-dev,"
fi

#Only Natty+ have supported+working libva-glx
if [ "$(lsb_release -is)" = "Debian" ]; then
BUILD_DEPENDS="$BUILD_DEPENDS
 libbluray-dev,
 libva-dev,"
else
if [ "$(lsb_release -is)" = "Ubuntu" -a "${XBMC_UBUNTU_PPA_VERSION}" = "natty" ] ; then
BUILD_DEPENDS_PPA="$BUILD_DEPENDS_PPA
 libbluray-dev,
 libva-dev,"
fi
if [ "$(lsb_release -is)" = "Ubuntu" -a "${XBMC_UBUNTU_PPA_VERSION}" = "oneiric" ] ; then
BUILD_DEPENDS_PPA="$BUILD_DEPENDS_PPA
 libbluray-dev,
 libva-dev,"
fi
fi

case "$1" in
    BUILD_DEPENDS)
        printf "$BUILD_DEPENDS"
        ;;
    BUILD_DEPENDS_PPA)
        printf "$BUILD_DEPENDS_PPA"
        ;;
    XBMC_LIVE_DEPENDS)
        XBMC_LIVE_DEPENDS="xbmc (= \${binary:Version}),
         openssh-server,
         \${python:Depends},
         python-apt,
         adduser,
         sudo,
         whois,
         lsb-release,
         \${misc:Depends},"
        if [ $(lsb_release -cs) = "lucid" ]; then
            XBMC_LIVE_DEPENDS="$XBMC_LIVE_DEPENDS
         mkpasswd,"
        fi
        if [ $(lsb_release -cs) = "natty" ]; then
            XBMC_LIVE_DEPENDS="$XBMC_LIVE_DEPENDS
         uxlaunch,"
        fi
        if [ $(lsb_release -cs) = "oneiric" ]; then
            XBMC_LIVE_DEPENDS="$XBMC_LIVE_DEPENDS
         lightdm,"
        fi

        printf "$XBMC_LIVE_DEPENDS"
        ;;
esac

exit 0
